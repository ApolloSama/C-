@model Jogador
@{
    ViewData["Title"] = "Jogadores";
}

<div class="titulo_pagina">
    <h1>Cadastro de @ViewData["Title"]</h1>
</div>

<form class="cadastro" method="POST" action='@Url.Action("Cadastrar")'>


    <div class="campo">
        <label>ID Jogador</label>
        <input type="text" name="IdJogador">
    </div>

    <div class="campo">
        <label>ID Equipe</label>
        <input type="text" name="IdEquipe">
    </div>

    <div class="campo">
        <label>Nome</label>
        <input type="text" name="Nome">
    </div>

    <div class="campo">
        <label for="">Email</label>
        <input type="text" name="Email">
    </div>

    <div class="campo">
        <label for="">Senha</label>
        <input type="text" name="Senha">
    </div>

    <button class="gradient btn" type="submit">Cadastrar</button>

</form>

<table>

    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
    </thead>

    <tbody>
        @foreach (Jogador j in ViewBag.Jogadores)
        {
            <tr>
                <td>@j.IdJogador</td>
                <td>@j.Nome</td>
                <td>@j.Email</td>
            </tr>
        }
    </tbody>

</table>